<div class="w-full max-w-md mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-900">買い物メモ</h2>
    <%= link_to "新規作成", new_memo_path, class: "text-sm bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

  <% if @memos.empty? %>
    <div class="text-center py-12 bg-gray-50 rounded-lg">
      <p class="text-gray-500">まだメモがありません</p>
      <p class="text-sm text-gray-400 mt-2">新しいメモを作成してみましょう</p>
    </div>
  <% else %>
    <div class="space-y-4">
      <% @memos.each do |memo| %>
        <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm">
          <div class="flex justify-between items-start mb-3">
            <div class="flex-1">
              <% if memo.title.present? %>
                <h3 class="text-base font-semibold text-gray-900 mb-1"><%= memo.title %></h3>
              <% end %>
              <div class="flex items-center space-x-2">
                <span class="text-sm font-medium text-gray-700"><%= memo.user.name %></span>
                <span class="text-xs text-gray-500"><%= memo.created_at.strftime("%Y年%m月%d日 %H:%M") %></span>
              </div>
              <% if memo.reason.present? %>
                <p class="text-sm text-gray-600 mt-2 italic">「<%= memo.reason %>」</p>
              <% end %>
            </div>
            <div>
              <%= link_to "編集", edit_memo_path(memo), class: "text-xs text-indigo-600 hover:text-indigo-500 px-2 py-1" %>
            </div>
          </div>
          
          <div class="space-y-1">
            <% memo.items.each do |item| %>
              <div class="flex items-center space-x-3 py-2 px-1 <%= 'opacity-60' if item.purchased %>">
                <%= form_with url: toggle_purchased_item_path(item), method: :patch, local: true, class: "flex items-center space-x-3 flex-1" do |f| %>
                  <label class="flex items-center justify-center w-5 h-5 border-2 rounded flex-shrink-0 cursor-pointer <%= item.purchased ? 'bg-green-500 border-green-500' : 'border-gray-300 hover:border-green-400' %> transition-colors">
                    <input type="checkbox" 
                           <%= 'checked' if item.purchased %> 
                           onchange="this.form.submit()"
                           class="hidden">
                    <% if item.purchased %>
                      <svg class="w-3.5 h-3.5 text-white pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                      </svg>
                    <% end %>
                  </label>
                  <span class="<%= 'line-through text-gray-500' if item.purchased %> <%= item.purchased ? 'text-gray-500' : 'text-gray-900' %> flex-1">
                    <% if item.quantity > 1 %>
                      <span class="text-sm text-gray-600"><%= item.quantity %>個 × </span>
                    <% end %>
                    <%= item.name %>
                  </span>
                  <% if item.purchased %>
                    <span class="text-xs text-gray-400">購入済み</span>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>