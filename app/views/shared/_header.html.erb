<nav class="bg-green-600 shadow-lg border-b border-green-700 sticky top-0 z-50">
  <div class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <%= link_to root_path, class: "flex items-center space-x-2 hover:opacity-80 transition-opacity cursor-pointer" do %>
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <div class="text-lg font-semibold text-white">かぶらん</div>
      <% end %>
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <% if current_household && current_user.households.count > 1 %>
            <div class="flex items-center space-x-2">
              <%= form_with url: switch_households_path, method: :post, local: true, data: { turbo: false }, id: "household-switch-form", class: "inline-block" do |f| %>
                <%= f.select :household_id, 
                    options_from_collection_for_select(current_user.households, :id, :name, current_household.id),
                    {},
                    { 
                      onchange: "this.form.submit()",
                      class: "text-sm text-white bg-green-700 border border-green-600 rounded-md px-3 py-1.5 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500"
                    } %>
              <% end %>
              <div class="relative group">
                <%= form_with url: leave_households_path, method: :delete, local: true, data: { turbo: false }, class: "inline-block" do |f| %>
                  <%= f.hidden_field :household_id, value: current_household.id %>
                  <%= f.button type: :submit, 
                      onclick: "return confirm('「#{current_household.name}」から退会しますか？');",
                      class: "text-xs text-white hover:text-red-200 bg-red-600 hover:bg-red-700 px-2 py-1 rounded transition-colors" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  <% end %>
                <% end %>
                <div class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 px-3 py-1.5 bg-gray-900 text-white text-xs rounded-lg whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none z-50">
                  グループから退会
                  <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 -mb-1">
                    <div class="border-4 border-transparent border-b-gray-900"></div>
                  </div>
                </div>
              </div>
            </div>
          <% elsif current_household %>
            <div class="flex items-center space-x-2">
              <span class="text-sm font-medium text-white"><%= current_household.name %></span>
              <div class="relative group">
                <%= form_with url: leave_households_path, method: :delete, local: true, data: { turbo: false }, class: "inline-block" do |f| %>
                  <%= f.hidden_field :household_id, value: current_household.id %>
                  <%= f.button type: :submit, 
                      onclick: "return confirm('「#{current_household.name}」から退会しますか？');",
                      class: "text-xs text-white hover:text-red-200 bg-red-600 hover:bg-red-700 px-2 py-1 rounded transition-colors" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  <% end %>
                <% end %>
                <div class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 px-3 py-1.5 bg-gray-900 text-white text-xs rounded-lg whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none z-50">
                  グループから退会
                  <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 -mb-1">
                    <div class="border-4 border-transparent border-b-gray-900"></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <div class="flex items-center space-x-3">
            <%= link_to edit_user_registration_path, class: "text-sm text-white hover:text-green-100 font-medium transition-colors flex items-center space-x-1" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <span><%= current_user.name %></span>
            <% end %>
            <%= button_to destroy_user_session_path, method: :delete, 
                data: { turbo: false },
                class: "text-sm text-white hover:text-green-100 bg-transparent border-none cursor-pointer font-medium transition-colors flex items-center space-x-1" do %>
              <span>ログアウト</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        <% else %>
          <%= link_to new_user_session_path, class: "px-4 py-2 bg-white text-gray-700 rounded-lg hover:bg-gray-50 transition-all font-medium" do %>
            ログイン
          <% end %>
          <%= link_to new_user_registration_path, class: "px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-all font-medium flex items-center space-x-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>新規登録</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</nav>

