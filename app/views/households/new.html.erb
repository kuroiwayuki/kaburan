<div class="w-full max-w-md mx-auto">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">家族グループを作成</h2>

  <%= form_with model: @household, url: households_path, html: { class: "space-y-4" } do |f| %>
    <% if @household.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-4">
        <h3 class="font-semibold mb-2">
          <%= pluralize(@household.errors.count, "件のエラー") %>があります：
        </h3>
        <ul class="list-disc list-inside">
          <% @household.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, "グループ名", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, autofocus: true, placeholder: "例: 山田家", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="actions">
      <%= f.submit "作成", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "戻る", root_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>

