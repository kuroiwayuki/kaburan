<div class="w-full max-w-md mx-auto">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">家族グループに参加</h2>

  <%= form_with url: join_households_path, method: :post, html: { class: "space-y-4" } do |f| %>
    <% if flash[:alert] %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div>
      <%= f.label :invite_code, "招待コード", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :invite_code, value: @invite_code, autofocus: true, placeholder: "例: ABC12345", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 uppercase" %>
      <p class="mt-1 text-sm text-gray-500">8文字の英数字コードを入力してください</p>
    </div>

    <div class="actions">
      <%= f.submit "参加", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "戻る", root_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>

