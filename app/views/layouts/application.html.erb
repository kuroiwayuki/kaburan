<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Myapp" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="bg-white shadow-sm border-b">
        <div class="container mx-auto px-4 py-3">
          <div class="flex justify-between items-center">
            <div class="text-lg font-semibold text-gray-900">かぶらん</div>
            <div class="flex items-center space-x-4">
              <% if current_household %>
                <div class="relative">
                  <button id="household-menu-button" class="flex items-center space-x-2 text-sm text-gray-700 hover:text-gray-900 focus:outline-none">
                    <span><%= current_household.name %></span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </button>
                  <div id="household-menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10">
                    <div class="py-1">
                      <% current_user.households.each do |household| %>
                        <%= form_with url: switch_households_path, method: :post, local: true, class: "block" do |f| %>
                          <%= f.hidden_field :household_id, value: household.id %>
                          <button type="submit" class="<%= 'bg-indigo-50 text-indigo-700' if household.id == current_household.id %> w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                            <%= household.name %>
                            <% if household.id == current_household.id %>
                              <span class="ml-2">✓</span>
                            <% end %>
                          </button>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
              <span class="text-sm text-gray-700"><%= current_user.name %></span>
              <%= button_to "ログアウト", destroy_user_session_path, method: :delete, 
                  class: "text-sm text-indigo-600 hover:text-indigo-500 bg-transparent border-none cursor-pointer" %>
            </div>
          </div>
        </div>
      </nav>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const button = document.getElementById('household-menu-button');
          const menu = document.getElementById('household-menu');
          
          if (button && menu) {
            button.addEventListener('click', function(e) {
              e.stopPropagation();
              menu.classList.toggle('hidden');
            });
            
            document.addEventListener('click', function() {
              menu.classList.add('hidden');
            });
            
            menu.addEventListener('click', function(e) {
              e.stopPropagation();
            });
          }
        });
      </script>
    <% end %>

    <main class="container mx-auto mt-28 px-5">
      <%= yield %>
    </main>
  </body>
</html>
