<% if notice %>
  <div class="bg-green-50 border-l-4 border-green-400 text-green-700 px-4 py-3 rounded-md mb-4" role="alert">
    <p class="font-medium"><%= notice %></p>
  </div>
<% end %>

<% if alert %>
  <div class="bg-red-50 border-l-4 border-red-400 text-red-700 px-4 py-3 rounded-md mb-4" role="alert">
    <p class="font-medium"><%= alert %></p>
  </div>
<% end %>


